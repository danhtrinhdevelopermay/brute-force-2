<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlayCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:alpha="0.9">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#212121">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/overlayTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monitor"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/overlayClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Close overlay"
                android:padding="2dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#424242"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/overlayCpuUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU: 0.0%"
            android:textColor="#4CAF50"
            android:textSize="11sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/overlayCpuTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp: --°C"
            android:textColor="#FFC107"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/overlayGpuTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPU: --°C"
            android:textColor="#FF9800"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/overlayFps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS: --"
            android:textColor="#03A9F4"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
